<div id="sort-title">Login</div>
<div class="container center-block">
  <div class="login-form">
    <form method="post" action="/local/login?base=<%- callbackURL %>" >
      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" type="text" name="email" id="email">
      </div>

      <div class="form-group">
        <label for="email">Password</label>
        <input class="form-control" type="password" name="password" id="password">
      </div>

      <input class="btn  btn-style form-control" type="submit" value="Login to NotePress">
    </form>
    <br/>
    <p class="text-center">Not a NotePress member yet? <a href="/local/signup">Sign up</a></p>
  </div>
</div>
