<!DOCTYPE html>
<html>
<head>
  <title>Evernote authentication</title>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,800,700,600' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/ionicons.min.css">
  <link rel="stylesheet" href="//cdn.jsdelivr.net/medium-editor/latest/css/medium-editor.min.css" type="text/css" media="screen" charset="utf-8">

  <script src="/js/jquery-2.1.4.min.js"></script>
  <script type="text/javascript" src="/js/api.js"></script>
  <script type="text/javascript" src="/js/application.js"></script>
  <script src="//cdn.jsdelivr.net/medium-editor/latest/js/medium-editor.min.js"></script>
</head>
<body>
  <h1 class="text-center site-logo"><a href="/">NotePress</a></h1>
  <div class="auth text-center">
    <% if(user !== undefined){ %>
      <a href="/article/post/new">Post New</a>
      <a href="/logout">Logout</a>
    <% } else { %>
      <a href="/local/login?base=<%- base %>" class="btn btn-primary">Login</a>
      <a href="/local/signup" class="btn btn-success">Sign Up with Evernote</a>

    <% } %>
  </div>
  <hr>
  <%- body %>
</body>
</html>