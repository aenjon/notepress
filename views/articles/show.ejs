<div class="container">
  <div class="showcase">
    <h1 id="showcase-title"></h1>
    <p><a id="showcase-author" href="#"></a> | Posted on: <span id="showcase-time"></span></p>
    <hr>
    <div id="showcase-content"></div>
    <hr>
    <div id="showcase-tag"></div>
    <div id="share-option" class="text-right">
      <!-- <i class="icon ion-share"></i> -->
      <% if (user !== undefined) { %>
        <form id="delete-post" method="POST">
          <button type="submit" class="btn btn-link icon ion-trash-a"></button>
        </form>
        <a type="submit" class="btn btn-link icon ion-edit" id="edit-post"></a>
      <% } %>
      <a class="icon ion-more" href="#"></a>
    </div>
  </div>
  <hr>
  <div class="comment center-block container-fluid">
    <div class="col-xs-10 col-sm-10">
      <h4 class="site-logo">comment</h4>
    </div>
    <div class="col-xs-2 col-sm-2 text-right">
      <a class="icon ion-plus" id="showComment" href="#"></a>
    </div>
    <div class="col-sm-12">
      <form id="comment-form">
        <div class="form-group">
        <% if (user !== undefined) { %>
          <textarea id="comment-content" rows="5" placeholder="what do you think..." class="form-control" data-current-user="<%- user._id %>"></textarea>
          </div>
          <button type="submit" class="btn btn-default ion-paper-airplane">POST</button>
        <% } else { %>
          <textarea id="comment-content" rows="5" placeholder="You must be logged in to leave comment" class="form-control" disabled></textarea>
        </div>
        <% } %>
      </form>
    </div>

    <div id="all-comment">
    </div>
  </div>
</div>

<script src="/js/articles/show.js"></script>